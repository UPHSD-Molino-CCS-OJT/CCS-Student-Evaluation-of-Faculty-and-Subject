{
  "name": "student-faculty-evaluation",
  "version": "2.0.0",
  "description": "UPHSD Student Faculty Evaluation Form - React + Express",
  "main": "server.js",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node setup-db-mongodb.js",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm install && npm run build",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client:build",
    "heroku-postbuild": "npm run client:build"
  },
  "keywords": [
    "evaluation",
    "faculty",
    "student",
    "react",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "accepts": "^1.3.8",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "ipaddr.js": "^2.1.0",
    "mongoose": "^8.0.3",
    "negotiator": "^0.6.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
