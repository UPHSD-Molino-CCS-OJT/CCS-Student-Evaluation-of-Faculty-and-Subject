{
  "name": "student-faculty-evaluation",
  "version": "2.0.0",
  "description": "UPHSD Student Faculty Evaluation Form - React + Express",
  "main": "server.ts",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only server.ts",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "build:server": "tsc",
    "setup-db": "ts-node setup-db-mongodb.ts",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm install && npm run build",
    "dev:fullstack": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run build:server && npm run client:build",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "evaluation",
    "faculty",
    "student",
    "react",
    "vite"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "accepts": "^1.3.8",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "ipaddr.js": "^2.1.0",
    "mongoose": "^8.0.3",
    "negotiator": "^0.6.3",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/connect-flash": "^0.0.40",
    "@types/connect-mongo": "^3.1.2",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/node": "^25.2.3",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
