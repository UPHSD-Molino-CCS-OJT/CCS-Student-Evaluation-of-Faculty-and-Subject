<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Subjects - UPHSD Faculty Evaluation</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg">
        <div class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-graduation-cap text-2xl"></i>
                    <div>
                        <h1 class="text-xl font-bold">UPHSD Faculty Evaluation</h1>
                        <p class="text-xs text-blue-100">Student: <%= student.student_number %></p>
                    </div>
                </div>
                <a href="/" class="bg-white text-blue-600 px-4 py-2 rounded-lg font-semibold hover:bg-blue-50 transition">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <!-- Student Info Card -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Hello, <%= student.full_name %>!</h2>
                    <p class="text-gray-600">
                        <i class="fas fa-id-card mr-2 text-blue-600"></i><%= student.student_number %>
                        <span class="mx-2">•</span>
                        <i class="fas fa-book mr-2 text-blue-600"></i><%= student.program_id.name %>
                        <span class="mx-2">•</span>
                        <i class="fas fa-graduation-cap mr-2 text-blue-600"></i><%= student.year_level %>
                    </p>
                </div>
                <div class="text-right">
                    <div class="text-3xl font-bold text-blue-600"><%= evaluatedCount %> / <%= enrollments.length %></div>
                    <p class="text-sm text-gray-600">Evaluations Completed</p>
                </div>
            </div>

            <!-- Progress Bar -->
            <div class="mt-4">
                <div class="bg-gray-200 rounded-full h-3">
                    <div 
                        class="bg-gradient-to-r from-blue-600 to-green-500 h-3 rounded-full transition-all duration-500"
                        style="width: <%= enrollments.length > 0 ? (evaluatedCount / enrollments.length * 100).toFixed(0) : 0 %>%"
                    ></div>
                </div>
                <p class="text-xs text-gray-500 mt-1 text-right"><%= enrollments.length > 0 ? (evaluatedCount / enrollments.length * 100).toFixed(0) : 0 %>% Complete</p>
            </div>
        </div>

        <!-- Flash Messages -->
        <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4">
                <i class="fas fa-exclamation-circle mr-2"></i><%= error_msg %>
            </div>
        <% } %>

        <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4">
                <i class="fas fa-check-circle mr-2"></i><%= success_msg %>
            </div>
        <% } %>

        <!-- Subjects List -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4">
                <h3 class="text-xl font-bold">
                    <i class="fas fa-book-open mr-2"></i>My Subjects for Evaluation
                </h3>
                <p class="text-sm text-blue-100 mt-1">School Year: <%= enrollments.length > 0 ? enrollments[0].school_year : 'N/A' %> - <%= enrollments.length > 0 ? enrollments[0].semester : 'N/A' %></p>
            </div>

            <% if (enrollments.length === 0) { %>
                <div class="p-12 text-center">
                    <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                    <p class="text-gray-600 text-lg mb-2">No subjects found</p>
                    <p class="text-gray-500 text-sm">You don't have any enrolled subjects for evaluation.</p>
                </div>
            <% } else { %>
                <div class="divide-y divide-gray-200">
                    <% enrollments.forEach((enrollment, index) => { %>
                        <div class="p-6 hover:bg-gray-50 transition <%= enrollment.has_evaluated ? 'bg-green-50' : '' %>">
                            <div class="flex items-start justify-between gap-4 flex-wrap">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <h4 class="text-lg font-bold text-gray-800"><%= enrollment.course_id.name %></h4>
                                        <% if (enrollment.has_evaluated) { %>
                                            <span class="bg-green-500 text-white text-xs px-3 py-1 rounded-full font-semibold">
                                                <i class="fas fa-check mr-1"></i>Evaluated
                                            </span>
                                        <% } else { %>
                                            <span class="bg-yellow-500 text-white text-xs px-3 py-1 rounded-full font-semibold">
                                                <i class="fas fa-clock mr-1"></i>Pending
                                            </span>
                                        <% } %>
                                    </div>
                                    
                                    <p class="text-gray-600 mb-3">
                                        <i class="fas fa-code mr-2 text-blue-600"></i><strong>Course Code:</strong> <%= enrollment.course_id.code %>
                                        <span class="mx-2">•</span>
                                        <i class="fas fa-users mr-2 text-blue-600"></i><strong>Section:</strong> <%= enrollment.section_code %>
                                    </p>
                                    
                                    <div class="flex items-center gap-2 text-gray-700">
                                        <div class="bg-blue-100 rounded-full w-10 h-10 flex items-center justify-center">
                                            <i class="fas fa-chalkboard-teacher text-blue-600"></i>
                                        </div>
                                        <div>
                                            <p class="font-semibold"><%= enrollment.teacher_id.full_name %></p>
                                            <p class="text-sm text-gray-500"><%= enrollment.teacher_id.department || 'Faculty Member' %></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex flex-col gap-2">
                                    <% if (!enrollment.has_evaluated) { %>
                                        <a 
                                            href="/student/evaluate/<%= enrollment._id %>" 
                                            class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-indigo-700 transition shadow-md hover:shadow-lg text-center"
                                        >
                                            <i class="fas fa-edit mr-2"></i>Evaluate Now
                                        </a>
                                    <% } else { %>
                                        <div class="text-center">
                                            <i class="fas fa-check-circle text-4xl text-green-500 mb-2"></i>
                                            <p class="text-sm text-gray-600">Completed</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>

        <% if (evaluatedCount === enrollments.length && enrollments.length > 0) { %>
            <!-- All Complete Message -->
            <div class="bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-lg p-8 text-center mt-6 shadow-lg">
                <i class="fas fa-trophy text-6xl mb-4"></i>
                <h3 class="text-2xl font-bold mb-2">Congratulations!</h3>
                <p class="text-lg">You have completed all your faculty evaluations. Thank you for your feedback!</p>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="text-center py-6 text-gray-600">
        <p class="text-sm">© 2026 UPHSD Molino - College of Computer Studies</p>
    </footer>
</body>
</html>
