<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Audit - UPHSD Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-6 md:py-8 max-w-7xl">
        <!-- Header -->
        <div class="mb-6 md:mb-8">
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Privacy Audit Report</h1>
                    <p class="text-sm md:text-base text-gray-600 mt-1">
                        Zero-Knowledge Privacy Compliance Check
                    </p>
                </div>
                <button onclick="runAudit()" id="runAuditBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition flex items-center gap-2">
                    <i class="fas fa-sync-alt" id="auditIcon"></i>
                    <span>Re-run Audit</span>
                </button>
            </div>
            
            <!-- Last Run Info -->
            <div class="bg-white rounded-lg shadow-sm p-4 border-l-4 border-blue-500">
                <div class="flex items-center gap-2 text-sm text-gray-600">
                    <i class="fas fa-clock"></i>
                    <span>Last audit run: <strong><%= new Date(auditReport.timestamp).toLocaleString() %></strong></span>
                </div>
            </div>
        </div>

        <!-- Overall Status -->
        <div class="mb-6">
            <% 
            let statusColor = 'green';
            let statusIcon = 'check-circle';
            let statusBg = 'bg-green-50';
            let statusBorder = 'border-green-500';
            let statusText = 'text-green-800';
            
            if (auditReport.conclusion.color === 'red') {
                statusColor = 'red';
                statusIcon = 'times-circle';
                statusBg = 'bg-red-50';
                statusBorder = 'border-red-500';
                statusText = 'text-red-800';
            } else if (auditReport.conclusion.color === 'yellow') {
                statusColor = 'yellow';
                statusIcon = 'exclamation-triangle';
                statusBg = 'bg-yellow-50';
                statusBorder = 'border-yellow-500';
                statusText = 'text-yellow-800';
            } else if (auditReport.conclusion.color === 'orange') {
                statusColor = 'orange';
                statusIcon = 'exclamation-triangle';
                statusBg = 'bg-orange-50';
                statusBorder = 'border-orange-500';
                statusText = 'text-orange-800';
            }
            %>
            
            <div class="<%= statusBg %> rounded-lg shadow-md p-6 border-l-4 <%= statusBorder %>">
                <div class="flex items-start gap-4">
                    <i class="fas fa-<%= statusIcon %> text-3xl <%= statusText %>"></i>
                    <div class="flex-1">
                        <h2 class="text-xl font-bold <%= statusText %> mb-2">
                            <%= auditReport.conclusion.status %>
                        </h2>
                        <p class="<%= statusText %> text-base">
                            <%= auditReport.conclusion.message %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <div class="text-3xl font-bold text-blue-600 mb-2">
                    <%= auditReport.summary.totalEvaluations %>
                </div>
                <div class="text-sm text-gray-600">Total Evaluations</div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <div class="text-3xl font-bold text-green-600 mb-2">
                    <%= auditReport.summary.evaluationsChecked %>
                </div>
                <div class="text-sm text-gray-600">Checked</div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <div class="text-3xl font-bold text-red-600 mb-2">
                    <%= auditReport.summary.issuesFound %>
                </div>
                <div class="text-sm text-gray-600">Critical Issues</div>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6 text-center">
                <div class="text-3xl font-bold text-yellow-600 mb-2">
                    <%= auditReport.summary.warningsFound %>
                </div>
                <div class="text-sm text-gray-600">Warnings</div>
            </div>
        </div>

        <!-- Critical Issues -->
        <% if (auditReport.issues.length > 0) { %>
        <div class="mb-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-exclamation-circle text-red-600"></i>
                Critical Issues (<%= auditReport.issues.length %>)
            </h2>
            <div class="space-y-4">
                <% auditReport.issues.forEach(function(issue) { %>
                    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-red-500">
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex items-center gap-3">
                                <span class="px-3 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded-full">
                                    <%= issue.severity %>
                                </span>
                                <h3 class="text-lg font-bold text-gray-800">
                                    <%= issue.title %>
                                </h3>
                            </div>
                        </div>
                        <p class="text-gray-700 mb-4">
                            <%= issue.description %>
                        </p>
                        <div class="bg-blue-50 border-l-4 border-blue-500 p-3 rounded">
                            <p class="text-sm font-semibold text-blue-800 mb-1">
                                <i class="fas fa-lightbulb mr-1"></i>
                                Recommendation:
                            </p>
                            <p class="text-sm text-blue-700">
                                <%= issue.recommendation %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- Warnings -->
        <% if (auditReport.warnings.length > 0) { %>
        <div class="mb-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-info-circle text-yellow-600"></i>
                Warnings & Information (<%= auditReport.warnings.length %>)
            </h2>
            <div class="space-y-4">
                <% auditReport.warnings.forEach(function(warning) { %>
                    <% 
                    let warningColor = 'yellow';
                    let warningBg = 'bg-yellow-50';
                    let warningBorder = 'border-yellow-500';
                    let warningText = 'text-yellow-800';
                    
                    if (warning.level === 'INFO') {
                        warningColor = 'blue';
                        warningBg = 'bg-blue-50';
                        warningBorder = 'border-blue-500';
                        warningText = 'text-blue-800';
                    }
                    %>
                    <div class="bg-white rounded-lg shadow-md p-6 border-l-4 <%= warningBorder %>">
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex items-center gap-3">
                                <span class="px-3 py-1 <%= warningBg %> <%= warningText %> text-xs font-semibold rounded-full">
                                    <%= warning.level %>
                                </span>
                                <h3 class="text-lg font-bold text-gray-800">
                                    <%= warning.title %>
                                </h3>
                            </div>
                        </div>
                        <p class="text-gray-700 mb-4">
                            <%= warning.description %>
                        </p>
                        <div class="<%= warningBg %> border-l-4 <%= warningBorder %> p-3 rounded">
                            <p class="text-sm font-semibold <%= warningText %> mb-1">
                                <i class="fas fa-lightbulb mr-1"></i>
                                Recommendation:
                            </p>
                            <p class="text-sm <%= warningText %>">
                                <%= warning.recommendation %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>

        <!-- No Issues Found -->
        <% if (auditReport.issues.length === 0 && auditReport.warnings.length === 0) { %>
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <i class="fas fa-shield-alt text-6xl text-green-500 mb-4"></i>
            <h2 class="text-2xl font-bold text-gray-800 mb-3">
                Perfect Privacy Compliance
            </h2>
            <p class="text-gray-600 text-lg mb-4">
                No privacy issues detected. Your system is fully compliant with zero-knowledge privacy requirements.
            </p>
            <div class="flex justify-center gap-6 text-sm text-gray-500">
                <div class="flex items-center gap-2">
                    <i class="fas fa-check-circle text-green-500"></i>
                    <span>No student IDs in evaluations</span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fas fa-check-circle text-green-500"></i>
                    <span>Anonymous tokens verified</span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="fas fa-check-circle text-green-500"></i>
                    <span>Schema validated</span>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Audit Information -->
        <div class="mt-8 bg-gray-50 rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-bold text-gray-800 mb-4">
                <i class="fas fa-info-circle mr-2"></i>
                About Privacy Auditing
            </h3>
            <div class="space-y-3 text-sm text-gray-700">
                <p>
                    <strong>What is audited:</strong> This audit checks the entire evaluation pipeline to ensure no student school IDs or identifiable information is exposed in evaluation records, database schemas, or data flows.
                </p>
                <p>
                    <strong>Zero-Knowledge Privacy:</strong> Our system uses anonymous tokens instead of student identifiers. Once an evaluation is submitted, it cannot be traced back to any specific student.
                </p>
                <p>
                    <strong>Recommendation:</strong> Run this audit regularly (weekly or after system updates) to ensure continued compliance with privacy requirements.
                </p>
                <div class="flex items-start gap-2 bg-white border-l-4 border-blue-500 p-3 rounded">
                    <i class="fas fa-shield-alt text-blue-600 mt-1"></i>
                    <div>
                        <strong class="text-blue-800">Student Protection:</strong>
                        <p class="text-gray-600">This audit ensures students can provide honest feedback without fear of identification or retaliation.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function runAudit() {
            const btn = document.getElementById('runAuditBtn');
            const icon = document.getElementById('auditIcon');
            
            // Disable button and show loading
            btn.disabled = true;
            btn.classList.add('opacity-50', 'cursor-not-allowed');
            icon.classList.add('fa-spin');
            
            try {
                const response = await fetch('/admin/privacy-audit/run', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Reload page to show new results
                    window.location.reload();
                } else {
                    alert('Failed to run audit: ' + result.message);
                    btn.disabled = false;
                    btn.classList.remove('opacity-50', 'cursor-not-allowed');
                    icon.classList.remove('fa-spin');
                }
            } catch (error) {
                console.error('Error running audit:', error);
                alert('An error occurred while running the audit');
                btn.disabled = false;
                btn.classList.remove('opacity-50', 'cursor-not-allowed');
                icon.classList.remove('fa-spin');
            }
        }
    </script>
</body>
</html>
