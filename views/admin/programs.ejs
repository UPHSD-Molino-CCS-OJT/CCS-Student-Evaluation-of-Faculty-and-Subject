<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Programs - UPHSD Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar') %>

    <div class="container mx-auto px-4 py-6 md:py-8">
        <div class="mb-6 md:mb-8 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-gray-800">Manage Programs</h1>
                <p class="text-sm md:text-base text-gray-600">Add, edit, or remove academic programs</p>
            </div>
            <button onclick="document.getElementById('addModal').classList.remove('hidden')" 
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 md:px-6 py-2 md:py-3 rounded-lg shadow-md transition text-sm md:text-base w-full sm:w-auto">
                <i class="fas fa-plus mr-2"></i>Add Program
            </button>
        </div>

        <% if (success_msg && success_msg.length > 0) { %>
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded">
                <%= success_msg %>
            </div>
        <% } %>

        <% if (error_msg && error_msg.length > 0) { %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded">
                <%= error_msg %>
            </div>
        <% } %>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Program Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Code</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (programs.length === 0) { %>
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500">
                                <i class="fas fa-graduation-cap text-4xl mb-2"></i>
                                <p>No programs found. Add your first program!</p>
                            </td>
                        </tr>
                    <% } else { %>
                        <% programs.forEach(program => { %>
                            <tr class="hover:bg-gray-50">

                                <td class="px-6 py-4 text-sm font-medium"><%= program.name %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm"><%= program.code || '-' %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                                    <button 
                                        data-id="<%= program.id %>" 
                                        data-name="<%= program.name %>" 
                                        data-code="<%= program.code || '' %>"
                                        onclick="editProgramFromData(this)" 
                                        class="text-blue-600 hover:text-blue-900">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button 
                                        data-id="<%= program.id %>" 
                                        data-name="<%= program.name %>"
                                        onclick="deleteProgramFromData(this)" 
                                        class="text-red-600 hover:text-red-900">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Add Program Modal -->
    <div id="addModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-bold">Add New Program</h3>
                <button onclick="document.getElementById('addModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form action="/admin/programs" method="POST">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Program Name *</label>
                        <input type="text" name="name" required placeholder="e.g., BS Computer Science - Data Science" 
                               class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Program Code</label>
                        <input type="text" name="code" placeholder="e.g., BSCS-DS, BSIT-GD, BSBA-FM" 
                               class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
                        <p class="text-xs text-gray-500 mt-1">Enter a unique program code (optional)</p>
                    </div>
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition">
                        Add Program
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Program Modal -->
    <div id="editModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-bold">Edit Program</h3>
                <button onclick="document.getElementById('editModal').classList.add('hidden')" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="editForm" method="POST">
                <input type="hidden" id="edit_id" name="id">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Program Name *</label>
                        <input type="text" id="edit_name" name="name" required 
                               class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-1">Program Code</label>
                        <input type="text" id="edit_code" name="code" placeholder="e.g., BSCS-DS, BSIT-GD, BSBA-FM" 
                               class="w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
                        <p class="text-xs text-gray-500 mt-1">Enter a unique program code (optional)</p>
                    </div>
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition">
                        Update Program
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function editProgramFromData(btn) {
            const id = btn.getAttribute('data-id');
            const name = btn.getAttribute('data-name');
            const code = btn.getAttribute('data-code');
            editProgram(id, name, code);
        }

        function deleteProgramFromData(btn) {
            const id = btn.getAttribute('data-id');
            const name = btn.getAttribute('data-name');
            deleteProgram(id, name);
        }

        function editProgram(id, name, code) {
            document.getElementById('edit_id').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_code').value = code;
            document.getElementById('editForm').action = '/admin/programs/' + id;
            document.getElementById('editModal').classList.remove('hidden');
        }

        function deleteProgram(id, name) {
            if (confirm('Are you sure you want to delete "' + name + '"?\n\nNote: Programs with existing courses or evaluations cannot be deleted.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/admin/programs/' + id + '/delete';
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Close modals on outside click
        window.onclick = function(event) {
            const addModal = document.getElementById('addModal');
            const editModal = document.getElementById('editModal');
            if (event.target == addModal) {
                addModal.classList.add('hidden');
            }
            if (event.target == editModal) {
                editModal.classList.add('hidden');
            }
        }
    </script>
</body>
</html>
